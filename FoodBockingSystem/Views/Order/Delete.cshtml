@model Food.DAL.Models.Order

@{
    ViewData["Title"] = "Delete";
}



<h3>Are you sure you want to delete this Order?</h3>

<div>
   
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            <label asp-for="OrderDate" class="control-label">Order Date</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>


        <dt class="col-sm-2">
            <label asp-for="CollectionDate" class="control-label">Collection Date</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CollectionDate)
        </dd>



        <dt class="col-sm-2">
            <label asp-for="CustomerId" class="control-label">Customer Name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>


        <dt class="col-sm-2">
            <label asp-for="FoodTypeId" class="control-label">Order Name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodType.FoodName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="YES" class="btn btn-danger" /> |
        <a asp-action="Index"class="btn btn-primary">NO</a>
    </form>
</div>
