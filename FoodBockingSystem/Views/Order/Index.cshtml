@model IEnumerable<Food.DAL.ExtentedModel.CustomerFoodTypeOrderModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Order</a>|
    <a asp-action="Search" class="btn btn-primary">Search Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.OrderDate)*@
                Order Date
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CustomerName)*@
                Customer Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.OrderName)*@
                Order Name
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-outline-dark" asp-route-id="@item.OrderId">Edit</a> |
           
                <a asp-action="Delete"class="btn btn-outline-danger" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a href="/Customer" class="btn btn-sm btn-primary">Go To Customer Page</a>