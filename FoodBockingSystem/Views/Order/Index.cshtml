@model IEnumerable<Food.DAL.ExtentedModel.CustomerFoodTypeOrderModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Order</a>
    <a href="/Customer" class="btn btn-sm btn-primary">Go To Customer Page</a>

</p>

<p>

    @using (Html.BeginForm("Index","Order",FormMethod.Get))
    {

        <b>Search Order By:</b>@Html.RadioButton("search By", "CustomerName",true) <text> Customer Name</text>

        @*@Html.RadioButton("search By Food Id", "FoodType")   <text > Order Name </text>*@

        <br />
        @Html.TextBox("search") <input type = "submit"  value = "search..." />

}




</p>

<table class="table">

    <thead> 
        <tr>
            <th> Order Date</th>
            <th>Collection  Date</th>
            <th>Customer Name</th>
            <th>Order Name</th>
            <th>Action</th>

        </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CollectionDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-dark" asp-route-id="@item.OrderId">Edit</a> |

                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a href="/Customer" class="btn btn-sm btn-primary">Go To Customer Page</a>