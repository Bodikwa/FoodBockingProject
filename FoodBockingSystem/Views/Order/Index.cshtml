@model IEnumerable<Food.DAL.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create"class="btn btn-primary">Add Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodType.FoodName)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-primary" asp-route-id="@item.OrderId">Edit</a> |
           
                <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
