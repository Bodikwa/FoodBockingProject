@model Food.DAL.Models.Customer

@{
    ViewData["Title"] = "Delete";
}



<h3>Are you sure you want to delete this Customer?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name" class="control-label">Name</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Surname" class="control-label">Surname</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ContactNumber" class="control-label">Contact Number</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="EnailAdress" class="control-label">Enail Adress</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnailAdress)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="CountryId" class="control-label">Country Name</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Yes" class="btn btn-danger" /> |
        <a asp-action="Index"class="btn btn-primary">NO</a>
    </form>
</div>
