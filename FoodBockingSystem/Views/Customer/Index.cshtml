@model IEnumerable<Food.DAL.ExtentedModel.CountryCustomerModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Customer</a>
    <a href="/Order" class="btn btn-sm btn-primary">Go To Order Page</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Customer Name</th>
            <th>Customer Surname</th>
            <th>Contact Number</th>
            <th> Email Addres</th>
            <th>Country Name</th>
            <th>Action</th>
           
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnailAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-outline-dark" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Delete"class="btn btn-outline-danger" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a href="/Order" class="btn btn-sm btn-primary">Go To Order Page</a>